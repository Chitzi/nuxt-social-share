{
    "git": {
        "requireBranch": "main",
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
          "preset": "conventionalcommits",
          "infile": "CHANGELOG.md"
        }
    },
    "hooks": {
        "before:init": ["npm run lint", "npm run test"],
        "after:bump": "npm run prepack"
    }
}